<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="12dp">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="102dp"
        android:layout_height="90dp"
        app:srcCompat="@drawable/logo"
        tools:ignore="MissingConstraints"
        android:layout_margin="16dp"
        tools:layout_editor_absoluteY="-20dp"
        />

    <Button
        android:id="@+id/ButtonLogin"
        android:layout_width="136dp"
        android:layout_height="45dp"
        android:text="Iniciar Sesión"
        android:textColor="@color/black"
        android:background="@android:color/transparent"
        app:autoSizeMaxTextSize="100sp"
        app:autoSizeMinTextSize="12sp"
        app:autoSizeStepGranularity="2sp"
        app:autoSizeTextType="uniform"
        tools:layout_editor_absoluteX="240dp"
        tools:layout_editor_absoluteY="2dp"
        tools:ignore="MissingConstraints"
        android:onClick="Login"/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:background="@android:color/holo_green_light"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="63dp" />

    <TextView
        android:id="@+id/TextName"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Nombre"
        android:textColor="@color/black"
        android:textSize="24sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="82dp"
        tools:pa="230dp" />

    <EditText
        android:id="@+id/FieldName"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:hint="Ingresa tu nombre"
        android:inputType="text"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="114dp" />

    <TextView
        android:id="@+id/TextSurnames"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:text="Apellidos"
        tools:layout_editor_absoluteY="160dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="30dp"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/FielSurnames"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:hint="Ingrese tus apellidos"
        android:inputType="text"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="192dp" />

    <TextView
        android:id="@+id/TextPhoneNumberField"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:text="Teléfono"
        tools:layout_editor_absoluteY="237dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="30dp"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/FieldPhoneNumberField"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:hint="Numero de Teléfono"
        android:inputType="phone"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="270dp"
        />

    <TextView
        android:id="@+id/TextPassword"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:text="Contraseña"
        tools:layout_editor_absoluteY="390dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="30dp"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/FieldPassword"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:hint="Ingrese tu contraseña"
        android:inputType="text"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="420dp" />

    <TextView
        android:id="@+id/TextConfirmPassword"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:text="Confirmar Contraseña"
        tools:layout_editor_absoluteY="466dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="30dp"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/FieldConfirmPassword"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:hint="Ingresa tu contraseña"
        android:inputType="text"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="498dp" />
    <TextView
        android:id="@+id/TextEmail"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:text="Correo Electronico"
        tools:layout_editor_absoluteY="314dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="30dp"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/FieldEmail"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:hint="Ejemplo@gmail.com"
        android:inputType="text"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="346dp" />

    <Button
        android:id="@+id/ButtonRegister"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/Login"
        android:enabled="false"
        android:onClick="Register"
        android:text="Registrar"
        android:textColor="@color/white"
        tools:layout_editor_absoluteX="125dp"
        tools:layout_editor_absoluteY="578dp"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>