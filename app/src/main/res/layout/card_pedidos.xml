<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_margin="0dp"
    card_view:cardElevation="0dp"
    android:id="@+id/card_pedido"
    card_view:cardBackgroundColor="@color/white"
    >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@color/white">

    <CheckBox
        android:id="@+id/myCheckbox"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="10dp"
        android:button="@drawable/custom_checkbox" />

    <ImageView
        android:id="@+id/imagepedido"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:layout_toRightOf="@+id/myCheckbox"
        android:padding="5dp"
        android:scaleType="center"
        android:src="@drawable/itemensalda" />

    <TextView
        android:id="@+id/title_cook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/imagepedido"
        android:fontFamily="sans-serif"
        android:text="@string/codela"
        android:textColor="@color/principal"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/Detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_cook"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/imagepedido"
        android:text="@string/codela"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imagepedido"
        android:layout_marginStart="36dp"
        android:layout_marginTop="10dp"
        android:text="@string/codela"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="normal" />

    <ImageView
        android:id="@+id/edit"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="190dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="10dp"
        android:layout_toEndOf="@+id/item_price"
        android:clickable="true"
        android:contentDescription="@string/menu"
        android:foreground="@drawable/effect"
        android:src="@drawable/edit_icon" />

    <ImageView
        android:id="@+id/delete"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="230dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="10dp"
        android:layout_toEndOf="@+id/item_price"
        android:clickable="true"
        android:contentDescription="@string/menu"
        android:foreground="@drawable/effect"
        android:src="@drawable/delete_icon" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/item_price"
        android:layout_marginTop="10dp"
        android:background="@color/graySelector" />

</RelativeLayout>


</androidx.cardview.widget.CardView>